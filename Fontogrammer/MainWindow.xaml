<Window x:Class="PergleLabs.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fg="clr-namespace:PergleLabs.UI;assembly=PergleLabs.Fontogram"
        xmlns:local="clr-namespace:PergleLabs.UI"
        mc:Ignorable="d"
        Title="Fontogrammer" Height="600" Width="1248"
        >
    <Window.Resources>
        <ControlTemplate
            x:Key="rgbStar"
            x:Name="rgbStar">
            <Grid>
                <Border
                    Width="100" Height="100"
                    Background="#ff00ff00" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="20"
                    RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="1" Grid.Column="0"
                    BorderThickness="1,2,3,4" BorderBrush="Green"
                    >
                    <Border.RenderTransform>
                        <TransformGroup>
                            <RotateTransform Angle="30"/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>
                <Border
                    Background="#80ff0000" 
                    Width="100" Height="100"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderThickness="1,2,3,4" BorderBrush="Red"
                    >
                </Border>
                <Border
                    Width="100" Height="100"
                    Background="#550000ff" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5"
                    BorderThickness="1,2,3,4" BorderBrush="Blue"
                    >
                    <Border.RenderTransform>
                        <TransformGroup>
                            <RotateTransform Angle="60"/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="285*"/>
            <RowDefinition Height="284*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid
            Height="100" Width="100"
            HorizontalAlignment="Left"
            Background="Yellow"
            ClipToBounds="True" Margin="0,234,0,235" Grid.RowSpan="2"
            >

            <Label
                FontWeight="Bold"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontSize="50" Margin="0"
                >
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1" ScaleX="3" CenterX="0"/>
                        <!--<SkewTransform AngleY="-41.498" AngleX="1.032" />-->
                        <RotateTransform Angle="0"/>
                    </TransformGroup>
                </Label.RenderTransform> @
            </Label>

        </Grid>


        <Control
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Template="{StaticResource ResourceKey=rgbStar}" Margin="180,214,180,215" Grid.RowSpan="2"
            />

        <!--<fg:Fontogram
            Margin="370,10,0,476" Grid.ColumnSpan="2"
            />-->


        <Grid
            Grid.Column="1"
            Name="_PreviewGrid" Grid.RowSpan="2"
            ClipToBounds="True"
            >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="5px"/>
                <ColumnDefinition Width="7*" MinWidth="5px"/>
                <ColumnDefinition Width="2*" MinWidth="5px"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" MinHeight="5px"/>
                <RowDefinition Height="5*" MinHeight="5px"/>
                <RowDefinition Height="3*" MinHeight="5px"/>
            </Grid.RowDefinitions>



            <!--<fg:Fontogram Builtin="Test1"
                Grid.Row="0" Grid.Column="0" Margin="10"
                />
            <fg:Fontogram Text="😀" TextAttr="" TextPosRel=""
                Grid.Row="0" Grid.Column="1" Margin="10"
                />
            <fg:Fontogram
                Grid.Row="0" Grid.Column="2" Margin="10"
                />
            <fg:Fontogram
                Grid.Row="1" Grid.Column="0" Margin="10"
                />
            <fg:Fontogram
                Grid.Row="1" Grid.Column="2" Margin="10"
                />
            <fg:Fontogram
                Grid.Row="2" Grid.Column="0" Margin="10"
                />
            <fg:Fontogram Builtin="Test2"
                Grid.Row="2" Grid.Column="1" Margin="10"
                />
            <fg:Fontogram
                Grid.Row="2" Grid.Column="2" Margin="10"
                />-->

            <Border
                Grid.ColumnSpan="3" Grid.RowSpan="3"
                Background="#eeee"/>


            <local:MovableBoundary
                Location="Left"
                Panel.ZIndex="100" MouseDoubleClick="GridSplitter_MouseDoubleClick"
                />
            <local:MovableBoundary
                Location="Top"
                Panel.ZIndex="100" MouseDoubleClick="GridSplitter_MouseDoubleClick"
                />
            <local:MovableBoundary
                Location="Right"
                Panel.ZIndex="100" MouseDoubleClick="GridSplitter_MouseDoubleClick"
                />
            <local:MovableBoundary
                Location="Bottom"
                Panel.ZIndex="100" MouseDoubleClick="GridSplitter_MouseDoubleClick"
                />
 
            <Border Grid.Row="1" Grid.Column="1"  Background="White"/>
            
            <!-- The Rectangles give us more flexibility than Grid's ShowGridLines. -->
            <Rectangle
                Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Margin="0,-10"
                Panel.ZIndex="101"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Stroke="#FF0000dd" StrokeThickness="1" StrokeDashArray="4 4"
                SnapsToDevicePixels="True"
                />
            <Rectangle
                Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="-10,0"
                Panel.ZIndex="101"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Stroke="#FF0000dd" StrokeThickness="1" StrokeDashArray="4 4"
                SnapsToDevicePixels="True"
                />

            <!--<fg:Fontogram
                Name="fgCenter"
                Grid.Row="1" Grid.Column="1"
                Text="🎞|Abc|Abc" TextAttr=";;#6000|Courier New;bold;#304f|Courier New;bold;#e04f" TextPosRel="100;58;-15|70;-16;-5|70;-13;-4"
                TextTransform="-10;2;0.5;60;-20|-13.1;0.8;1.62;-8|-13.1;0.8;1.62;-8"
                BackAttr=";#6baa;1,0,0,1.5;#cbaa" BackPosRel="90;42;47;2" BackCornerRadiusRel="15"
                BackTransform="-10;2;0.5;60;-20"
                />-->
            <fg:Fontogram
                Grid.Row="1" Grid.Column="1" Margin="4"
                Name="fgSquareLogo"
                
                Text="🎞|A|A" TextAttr=";;#999|Courier New;bold;#304f|Courier New;bold;#f01d" TextPosRel="100;26;7|70;-16.4;-0.6|70;-12;1"
                TextTransform="-10;1;0.3;60;-20|-15.8;0.9;1.7;-18,17|-15.8;0.9;1.7;-18,17"
                BackAttr=";#7baa;1,0,0,1.5;#cbaa" BackPosRel="105;42;28;10"
                BackTransform="-10;1;0.3;60;-20"
                />
        </Grid>

        <TextBox
            x:Name="tbBackPosRel"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Height="30" Width="300" Margin="100,85,100,169"
            TextChanged="TbBackPosRel_TextChanged" Grid.Row="1"
            >
            90;42;47;2
        </TextBox>
    </Grid>
</Window>
