        }


<#
foreach (string propName in PROPERTY_NAMES)
{
#>
        private void On<#= propName #>Changed()
        {
            _FgPreview.<#= propName #> = string.Join("|", XamlLayers.Select(layer => layer.<#= propName #>));
        }
<#
}
