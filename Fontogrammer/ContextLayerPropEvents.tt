        private void SetPropertyEventHandlers(XamlLayerItem layer)
        {
            layer.TextChanged += OnTextChanged;
<#
foreach (string propName in PROPERTY_NAMES)
{
#>
            layer.<#= propName #>Changed += On<#= propName #>Changed;
<#
}
